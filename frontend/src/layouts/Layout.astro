---
const base = import.meta.env.BASE_URL;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
		<link rel="icon" href={`${base}favicon.ico`} />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>
	</head>
	<body class="bg-white dark:bg-slate-900">
		<nav class="border-b border-slate-200 dark:border-slate-700 px-6 py-3 flex gap-4">
			<a href={base} class="text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-slate-100">Home</a>
			<a href={`${base}data-test/`} class="text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-slate-100">Data Test</a>
			<a href={`${base}course-info/`} class="text-slate-600 hover:text-slate-900 dark:text-slate-300 dark:hover:text-slate-100">Course Info</a>
		</nav>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
